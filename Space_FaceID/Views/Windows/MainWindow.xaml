<Window
    x:Class="Space_FaceID.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Space_FaceID.Views.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Space FaceID - ระบบยืนยันตัวตนด้วยใบหน้า"
    Width="1200"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    SizeToContent="Height"
    Style="{StaticResource MaterialDesignWindow}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Icon>
        <Binding Converter="{StaticResource VisualToImageSourceConverter}">
            <Binding.Source>
                <materialDesign:PackIcon
                    Width="30"
                    Height="30"
                    Foreground="Black"
                    Kind="SecurityAccount" />
            </Binding.Source>
        </Binding>
    </Window.Icon>

    <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <!--  เมนูด้านซ้าย (Navigation Drawer)  -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="220">
                    <materialDesign:ColorZone
                        Padding="16"
                        DockPanel.Dock="Top"
                        Mode="PrimaryMid">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Kind="Security" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="เมนูหลัก" />
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <ListBox x:Name="MenuListBox" Margin="0,16,0,16">
                        <ListBoxItem x:Name="DashboardItem" IsSelected="True">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Kind="ViewDashboard" />
                                <TextBlock VerticalAlignment="Center" Text="แดชบอร์ด" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="AccessListItem">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Kind="ClipboardList" />
                                <TextBlock VerticalAlignment="Center" Text="ประวัติการเข้าออก" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="EmployeesItem">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Kind="AccountMultiple" />
                                <TextBlock VerticalAlignment="Center" Text="ข้อมูลพนักงาน" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="DevicesItem">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Kind="ImportantDevices" />
                                <TextBlock VerticalAlignment="Center" Text="อุปกรณ์เข้าออก" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="ReportsItem">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Kind="FileChart" />
                                <TextBlock VerticalAlignment="Center" Text="รายงาน" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="SettingsItem">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Kind="Settings" />
                                <TextBlock VerticalAlignment="Center" Text="ตั้งค่าระบบ" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>

                    <StackPanel Margin="16" DockPanel.Dock="Bottom">
                        <Button
                            Margin="0,8,0,0"
                            Content="ออกจากระบบ"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                    </StackPanel>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!--  เนื้อหาหลัก  -->
            <DockPanel>
                <!--  แถบด้านบน  -->
                <materialDesign:ColorZone
                    Padding="16"
                    materialDesign:ElevationAssist.Elevation="Dp2"
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ToggleButton x:Name="MenuToggleButton" Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                            <TextBlock
                                Margin="16,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="ระบบตรวจจับการเข้าออกบริษัท" />
                        </StackPanel>

                        <materialDesign:Card
                            Grid.Column="1"
                            Padding="6"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            materialDesign:ElevationAssist.Elevation="Dp0"
                            Background="#EDF0F5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}">
                                    <Run Text="วันที่" />
                                    <Run Text="{Binding CurrentDate, StringFormat=dd/MM/yyyy}" />
                                    <Run Text="เวลา" />
                                    <Run Text="{Binding CurrentTime}" />
                                    <Run Text="น." />
                                </TextBlock>
                            </StackPanel>
                        </materialDesign:Card>

                        <StackPanel
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Border
                                Width="40"
                                Height="40"
                                Margin="0,0,8,0"
                                Background="LightGray"
                                CornerRadius="20">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Kind="Account" />
                            </Border>
                            <TextBlock
                                Margin="8,0,10,0"
                                VerticalAlignment="Center"
                                Text="ชื่อผู้ใช้งาน" />
                            <materialDesign:PopupBox
                                Margin="5"
                                PlacementMode="BottomAndAlignRightEdges"
                                StaysOpen="False">
                                <StackPanel>
                                    <Button Content="โปรไฟล์" />
                                    <Button Content="เปลี่ยนรหัสผ่าน" />
                                    <Separator />
                                    <Button Content="ออกจากระบบ" />
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <!--  แสดง Snackbar แจ้งเตือน  -->
                <materialDesign:Snackbar
                    x:Name="MainSnackbar"
                    DockPanel.Dock="Bottom"
                    MessageQueue="{materialDesign:MessageQueue}" />

                <Grid Margin="16">
                    <ContentControl Content="{Binding CurrentView}" />
                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>
